{% extends 'base1.html.twig' %}

{% block title %}New Médicament
{% endblock %}

{% block body %}
	<div class="container">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header card-header-primary">
					<h2 class="card-title">Ajouter médicament</h4>
					<p class="card-category">Saisir les coordonnées du médicament</p>
				</div>
				<div class="card-body">
					{{ form_start(form) }}

					<div class="row">
						<div class="col-md-6">
							<div class="form-group bmd-form-group">
								<label class="bmd-label-floating">Nom</label>
								{{ form_widget(form.nom, {'attr' : {'class' : 'form-control' }}) }}
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group bmd-form-group">
								<label class="bmd-label-floating">Fournisseur</label>
								{{ form_widget(form.fournisseur, {'attr' : {'class' : 'form-control' }}) }}
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<div class="form-group bmd-form-group">
								<label class="bmd-label-floating">Prix</label>
								{{ form_widget(form.prix_achat, {'attr' : {'class' : 'form-control' }}) }}
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group bmd-form-group">
								<label class="bmd-label-floating">Poids</label>
								{{ form_widget(form.poid, {'attr' : {'class' : 'form-control' }}) }}
							</div>
						</div>
					</div>

					<button type="submit" class="btn btn-primary pull-right btn-round" onclick="f()">Ajouter</button>
					<div class="clearfix"></div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>

	<a href="{{ path('medicament_index1') }}" class="btn btn-info btn-round">Retourner à liste</a>
	<script>
		function f (){
			window.alert("Voulez-vous vraiment continuer ?");
		}
	</script
{% endblock %}
